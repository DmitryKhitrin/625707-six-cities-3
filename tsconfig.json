{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "paths": {
      "*": ["*", "./@types/*"]
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
