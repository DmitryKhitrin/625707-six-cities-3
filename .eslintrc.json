{
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true,
    "jest": true
  },
  "extends": ["htmlacademy/es6", "plugin:react/recommended"],
  "plugins": ["react",  "react-hooks", "@typescript-eslint", "eslint-plugin-react"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react-hooks/rules-of-hooks": ["error"],
    "react-hooks/exhaustive-deps": ["error"],
    "no-unused-vars": [0],
    "react/prop-types": [0],
    "@typescript-eslint/explicit-function-return-type": [0],
    "@typescript-eslint/no-use-before-define": [0]
  },
  "settings": {
    "react": {
      "version": "16"
    },
    "import/resolver": {
      "node": {
          "paths": ["./"]
      }
    }
  }
}

